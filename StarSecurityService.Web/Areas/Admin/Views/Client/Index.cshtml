@model IEnumerable<StarSecurityService.ApplicationCore.Entities.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                <a href="@Url.Action("Create", "Client")" class="btn btn-primary">Create Client</a>
                <div class="bootstrap-table">
                    <div class="table-responsive">
                        <br />
                        <table class="table table-bordered table-hover" id="tableIndexClient">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Image)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Image)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            <a href="@Url.Action($"Edit/{item.Id}","Client")" class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            <a href="@Url.Action($"Delete/{item.Id}","Client")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>  
                        </table>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div><!--/.row-->
@section scripts{
    <script>
        $("#tableIndexClient").DataTable();
    </script>
}

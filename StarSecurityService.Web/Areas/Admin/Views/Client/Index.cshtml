@model IEnumerable<StarSecurityService.ApplicationCore.Entities.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
@section style{
 
}

<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                <a href="@Url.Action("Create", "Client")" class="btn btn-primary">Create Client</a>
                <div class="bootstrap-table">
                    <div class="table-responsive">
                        <br />
                        <table class="table  table-striped table-bordered dt-responsive nowrap" id="myTable">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Image)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Image)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            <button type="button" data-id="@item.Id" class="btn btn-primary btn-sm infoEmployee" data-toggle="modal" data-target="#myModal" ><i class="fa fa-users" aria-hidden="true"></i></button>
                                            <a href="@Url.Action($"Edit/{item.Id}","Client")" class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            <a href="@Url.Action($"Delete/{item.Id}","Client")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Infomation Employee</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">Order</th>
                                <th class="text-center">Employee Name </th>
                                <th class="text-center">Client Name </th>
                                <th class="text-center">Status Employee</th>
                            </tr>
                            
                        </thead>
                        <tbody class="tbodyModal">
                            <tr>
                                <td class="text-center">Order</td>
                                <td class="text-center">Employee Name </td>
                                <td class="text-center">Client Name </td>
                                <td class="text-center">Status Employee</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div><!--/.row-->


@section scripts{

    <script>
        $(document).on("click", ".infoEmployee", function () {
            let idClient = $(this).attr("data-id");
            console.log(idClient);
            $.get(`/Client/GetAllEmployeeByClientId/${idClient}`).done(function (result) {
                if (result.Data.length > 0) {
                    let defaultTr = $(".tbodyModal tr:first").clone();
                    let stt = 0;
                    for (let value of result.Data) {
                        stt++;
                        let _tr = defaultTr.insertAfter('.tbodyModal tr:last');
                        _tr.find("td:eq(0)").text(stt);
                        _tr.find("td:eq(1)").text(value.EmployeeName);
                        _tr.find("td:eq(2)").text(value.ClientName);
                        _tr.find("td:eq(3)").text(value.StatusName);
                    }
                    $(".tbodyModal tr:first").remove(); 
                }
            });
        })
    </script>

}

@model IEnumerable<StarSecurityService.ApplicationCore.Entities.ShareHolder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">

        <div class="panel panel-primary">

            <div class="panel-body">
                <a href="@Url.Action("Create", "ShareHolders")" class="btn btn-primary  ">Create ShareHolder</a>
                <div class="bootstrap-table">
                    <div class="table-responsive">
                        <br />
                        <table class="table  table-striped table-bordered dt-responsive nowrap" id="myTable">
                            <thead>
                                <tr class="active">
                                    <th> Order</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                   
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Any() == true)
                                {
                                    int order = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="width:5%">
                                                @((order++).ToString("D2"))
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                <a href="@Url.Action($"Create/{item.Id}","ShareHolders")" class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                <a href="#" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div><!--/.row-->
@model IEnumerable<StarSecurityService.ApplicationCore.Entities.ServiceOffer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

@section style{
    <style>
        #title {
            font-size: 1.5rem;
            width: 250px;
            line-height: 2rem;
            max-height: 9rem;
            -webkit-box-orient: vertical;
            display: block;
            display: -webkit-box;
            overflow: hidden !important;
            text-overflow: ellipsis;
            -webkit-line-clamp: 2;
        }
    </style>
}

<br />
<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">

        <div class="panel panel-primary">
            <div class="panel-heading">Service Offer List</div>
            <div class="panel-body">
                <div class="bootstrap-table">
                    <div class="table-responsive">
                        <a href="@Url.Action("Create", "ServiceOffer")" class="btn btn-primary">Create Service Offer</a>
                        <hr />
                        <table class="table table-bordered table-hover" id="tableIndexEmployee">
                            <thead>
                                <tr>
                                    <th class="text-center" width="20%">
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th class="text-center" width="20%">
                                        @Html.DisplayNameFor(model => model.Details)
                                    </th>
                                    <th class="text-center" width="20%">
                                        @Html.DisplayNameFor(model => model.Introduce)
                                    </th>
                                    <th class="text-center" width="20%">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th class="text-center" width="10%">
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <h4 id="title" title="@Html.Raw(item.Title)" style="width: 150px" >@Html.Raw(item.Title)</h4>
                                        </td>
                                        <td>
                                            <h4 id="title" title="@Html.Raw(item.Details)">@Html.Raw(item.Details)</h4>
                                        </td>
                                        <td>
                                            <h4 id="title" title="@Html.Raw(item.Introduce)">@Html.Raw(item.Introduce)</h4>
                                        </td>
                                        <td>
                                            <h4 id="title" title="@Html.Raw(item.Description)">@Html.Raw(item.Description)</h4>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            <a href="@Url.Action($"Edit/{item.Id}","ServiceOffer")" class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            <a href="@Url.Action($"Delete/{item.Id}","ServiceOffer")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>


                        </table>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div><!--/.row-->
@section scripts{
    <script>
        $("#tableIndexEmployee").DataTable();
    </script>
}
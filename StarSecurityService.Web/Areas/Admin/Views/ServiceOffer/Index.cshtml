@model IEnumerable<StarSecurityService.ApplicationCore.Entities.ServiceOffer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
<br />
<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">

        <div class="panel panel-primary">
            <div class="panel-heading">Service Offer List</div>
            <div class="panel-body">
                <div class="bootstrap-table">
                    <div class="table-responsive">
                        <a href="@Url.Action("Create", "ServiceOffer")" class="btn btn-primary">Create Service Offer</a>
                        <hr />
                        <table class="table table-bordered table-hover" id="tableIndexEmployee">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Details)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Introduce)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        <p>
                                            <a data-toggle="collapse" href="#@item.Id" role="button" aria-expanded="false" aria-controls="collapseExample">
                                                <i class="fa fa-file-o" aria-hidden="true"></i>
                                            </a>
                                        </p>
                                        <div class="collapse" id="@item.Id">
                                            <div class="card card-body">
                                                @Html.Raw(item.Title)
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p>
                                            <a class="" data-toggle="collapse" href="#d_@item.Id" role="button" aria-expanded="false" aria-controls="collapseExample">
                                                <i class="fa fa-file-o" aria-hidden="true"></i>
                                            </a>
                                        </p>
                                        <div class="collapse" id="d_@item.Id">
                                            <div class="card card-body">
                                                @Html.Raw(item.Details)
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p>
                                            <a data-toggle="collapse" href="#I_@item.Id" role="button" aria-expanded="false" aria-controls="collapseExample">
                                                <i class="fa fa-file-o" aria-hidden="true"></i>
                                            </a>
                                        </p>
                                        <div class="collapse" id="I_@item.Id">
                                            <div class="card card-body">
                                                @Html.Raw(item.Introduce)
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p>
                                            <a data-toggle="collapse" href="#dc_@item.Id" role="button" aria-expanded="false" aria-controls="collapseExample">
                                                <i class="fa fa-file-o" aria-hidden="true"></i>
                                            </a>
                                        </p>
                                        <div class="collapse" id="dc_@item.Id">
                                            <div class="card card-body">
                                                @Html.Raw(item.Description)
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        <a href="@Url.Action($"Edit/{item.Id}","ServiceOffer")" class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                        <a href="@Url.Action($"Delete/{item.Id}","ServiceOffer")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                           

                        </table>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div><!--/.row-->
@section scripts{
    <script>
        $("#tableIndexEmployee").DataTable();
    </script>
}
@model IEnumerable<StarSecurityService.ApplicationCore.Entities.Vacancy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">

        <div class="panel panel-primary">

            <div class="panel-body">
                <div class="bootstrap-table">
                    <div class="table-responsive">
                        <a href="@Url.Action("Create", "Vacancy")" class="btn btn-primary">Create Vacancy</a>
                        <hr />
                        <table id="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Requirement)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UpdateBy)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BranchId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceOfferId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UpdateAt)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Salary)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <p>
                                                <a class="btn btn-primary" data-toggle="collapse" href="#@item.Id" role="button" aria-expanded="false" aria-controls="collapseExample">
                                                    <i class="fa fa-file-o" aria-hidden="true"></i>
                                                </a>
                                            </p>
                                            <div class="collapse" id="@item.Id">
                                                <div class="card card-body">
                                                    @Html.Raw(item.Requirement)
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UpdateBy)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BranchId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ServiceOfferId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UpdateAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Salary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            <a href="@Url.Action($"Edit/{item.Id}","Vacancy")" class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            <a href="@Url.Action($"Delete/{item.Id}","Vacancy")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div><!--/.row-->
@section scripts{
    <script>
        $("#table").DataTable();
    </script>
}
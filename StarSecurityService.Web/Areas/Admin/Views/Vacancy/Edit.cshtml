@model StarSecurityService.ApplicationCore.Entities.Vacancy

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Vacancy</h1>
    </div>
</div><!--/.row-->

<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">

        <div class="panel panel-primary">
            <div class="panel-heading">Edit Vacancy</div>
            <div class="panel-body">
                <div class="row" style="margin-bottom:40px">
                    <div class="col-xs-8">
                        @using (Html.BeginForm("Edit", "Vacancy", FormMethod.Post, new { id = Model.Id, onsubmit = "return myFunction()" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Vacancy</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Requirement, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Requirement, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Requirement, "", new { @class = "text-danger" })
                                        <div style="height: 5px;">
                                            <span class="hidden" id="requirement" style="color: red;">Requirement not valid!</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                        <div style="height: 5px;">
                                            <span class="hidden" id="title" style="color: red;">Title not valid!</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.BranchId, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("BranchId", (IEnumerable<SelectListItem>)ViewBag.Branch, new { @class = "form-control" })
                                        <div style="height: 5px;">
                                            <span class="hidden" id="branch" style="color: red;">Please choose branch!</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ServiceOfferId, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("ServiceOfferId", (IEnumerable<SelectListItem>)ViewBag.Service, new { @class = "form-control" })
                                        <div style="height: 5px;">
                                            <span class="hidden" id="service" style="color: red;">Please choose Service!</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Salary, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input type="number" step="0.1" id="Salary" name="Salary" value="@(Model.Salary)" class="form-control">
                                        <div style="height: 5px;">
                                            <span class="hidden" id="salary" style="color: red;">Please input Salary!</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.Status)
                                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!--/.row-->
@section scripts{
    <script>
        function myFunction() {
            if ($("#Requirement").val().length == 0) {
                document.getElementById("requirement").classList.remove("hidden");
                return false;
            } else {
                document.getElementById("requirement").classList.add("hidden");
            }
            if ($("#Title").val().length == 0) {
                document.getElementById("title").classList.remove("hidden");
                return false;
            } else {
                document.getElementById("title").classList.add("hidden");
            }
            if ($("#Salary").val() < 1) {
                document.getElementById("salary").classList.remove("hidden");
                return false;
            } else {
                document.getElementById("salary").classList.add("hidden");
            }
            if ($("#Branch").val().length == 0) {
                document.getElementById("branch").classList.remove("hidden");
                return false;
            } else {
                document.getElementById("branch").classList.add("hidden");
            }
            if ($("#Service").val().length == 0) {
                document.getElementById("service").classList.remove("hidden");
                return false;
            } else {
                document.getElementById("service").classList.add("hidden");
            }

        }
    </script>
}
@model IEnumerable<StarSecurityService.ApplicationCore.Entities.Employyee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
@section style{
    <style>
        table thead th, table tbody td {
            height: 20px !important
        }
    </style>
}
<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">

        <div class="panel panel-primary">

            <div class="panel-body">
                <a href="@Url.Action("Create", "Employee")" class="btn btn-primary  ">Create Employee</a>
                <div class="bootstrap-table">
                    <div class="table-responsive">
                        <br />
                        <table class="table  table-striped table-bordered dt-responsive nowrap" id="myTable">
                            <thead>
                                <tr class="active">
                                    <th> Order</th>
                                    <th>UserName </th>
                                    <th>Address </th>
                                    <th> Email</th>
                                    <th>Gender </th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Any() == true)
                                {
                                    int order = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="width:5%">
                                                @((order++).ToString("D2"))
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserName)
                                            </td>


                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                           
                                            <td>
                                                @(item.Sex ? "Male": "Female")
                                            </td>

                                            <td>
                                                @(item.Status ? "Active" : "No Active")
                                            </td>

                                            <td>
                                                <a href="@Url.Action($"Create/{item.Id}","Employee")" class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                <a href="#" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div><!--/.row-->
@section scripts{
    <script>
        $("#tableIndexEmployee").DataTable();
    </script>
}